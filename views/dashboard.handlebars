<h2>{{posts.user.username}} Dashboard</h2>

<!-- shows all the user's posts -->
{{#if posts.length}}
<section>
    <ul class="post-list">
        {{#each posts as |post|}}
        <li>
            <article class="post">
                <div class="title">
                    <a href="/post/{{id}}" target="" id="post-title">{{title}}</a>
                </div>
                <div class="meta">
                    {{post_content}}
                    <br />
                    <!-- display edit or delete buttons -->
                    <a href="/editpost/{{id}}">
                        <button type="submit" id="edit-post" class="btn">Edit Post</button>
                    </a>
                </div>
            </article>
        </li>
        {{/each}}
    </ul>
</section>
{{/if}}


