<ul class="post-list">
    {{#each posts}}
    <li>
        <article class="post">
            <div class="title">
                <a href="#" target="_blank">{{title}}</a>
                <span>By: {{user.username}} on {{created_at}}</span>
            </div>
            <div class="meta">
                {{post_content}}
                <a href="/post/{{id}}">{{comments.length}} comment(s)</a>
            </div>
        </article>
    </li>
    {{/each}}
</ul>