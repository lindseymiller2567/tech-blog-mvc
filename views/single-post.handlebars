<!-- display post -->
<article class="post">
    <div class="title">
        <a href="" target="">{{post.title}}</a>
        <span>Posted by {{post.user.username}}</span>
    </div>
    <div class="meta">
        {{post.post_content}}
        <a href="/post/{{post.id}}">{{post.comments.length}} comment(s)</a>
    </div>
</article>

{{#if loggedIn}}
<!-- display comments -->
<div class="comments">
    {{#each post.comments}}
    <section class="comment">
        <div class="meta">
            {{user.username}} on {{created_at}}
        </div>
        <div class="text">
            {{comment_text}}
        </div>
    </section>
    {{/each}}
</div>


<!-- MODEL -->
<div>
    <!-- open model - edit post button -->
    <button type="submit" id="edit-post" class="btn">Edit Post</button>

    <!-- The Modal -->
    <div id="myModal" class="modal">

        <!-- Modal content -->
        <div class="modal-content">
            <span class="close">&times;</span>
            <div>
                <p>Edit Title:</p>
                <textarea class="edit-title-textarea">{{post.title}}</textarea>
            </div>
            <div>
                <p>Edit Content:</p>
                <textarea class="edit-post-textarea">{{post.post_content}}</textarea>
            </div>
            <div>
                <button type="submit" id="edit-post-btn">Save Changes</button>
            </div>
        </div>

    </div>
</div>


<!-- comment form to add comment -->
<h3>Join the Conversation!</h3>
<form class="comment-form">
    <div>
        <textarea name="comment-body"></textarea>
    </div>

    <div>
        <button type="submit">Add Comment</button>
    </div>
</form>

{{else}}
<!-- if not logged in display message to log in -->
<div class="comments">
    {{#each post.comments}}
    <section class="comment">
        <div class="text">
            Login or Sign-up to view and add comments.
        </div>
    </section>
    {{/each}}
</div>
{{/if}}


{{#if loggedIn}}
<script src="/javascript/comment.js"></script>
<script src="/javascript/edit-post.js"></script>
{{/if}}