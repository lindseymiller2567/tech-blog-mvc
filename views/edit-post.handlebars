<h2>Edit Post</h2>

<div>
    <div id="myModal" class="modal">

        <div class="modal-content">
            <div>
                <p>Edit Title:</p>
                <textarea class="edit-title-textarea">{{post.title}}</textarea>
            </div>
            <div>
                <p>Edit Content:</p>
                <textarea class="edit-post-textarea">{{post.post_content}}</textarea>
            </div>
            <div>
                <button type="submit" id="edit-post-btn">Save Changes</button>
                <button type="submit" id="delete-post-btn">Delete Post</button>
            </div>
        </div>

    </div>
</div>


<script src="/javascript/edit-post.js"></script>
<script src="/javascript/delete-post.js"></script>